<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
	https://raw.github.com/impetus-opensource/Kundera/Kundera-2.0.4/kundera-core/src/test/resources/META-INF/persistence_2_0.xsd"
             version="2.0">

    <!-- A JPA Persistence Unit -->
    <persistence-unit name="inventory_server" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- JPA entities must be registered here -->
        <class>com.tailoredshapes.inventoryserver.model.User</class>
        <class>com.tailoredshapes.inventoryserver.model.Category</class>
        <class>com.tailoredshapes.inventoryserver.model.MetricType</class>
        <class>com.tailoredshapes.inventoryserver.model.Metric</class>
        <class>com.tailoredshapes.inventoryserver.model.Inventory</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://192.168.33.10:3306/inventory"/>
            <property name="javax.persistence.jdbc.user" value="inventory"/>
            <property name="javax.persistence.jdbc.password" value="cassierocks"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <property name="hibernate.cache.provider_class" value="org.hibernate.cache.HashtableCacheProvider" />
        </properties>
    </persistence-unit>

</persistence>